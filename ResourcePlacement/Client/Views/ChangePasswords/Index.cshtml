@{ Layout = "_LayoutChange"; }
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{ ViewBag.email = HttpContextAccessor.HttpContext.Session.GetString("Email"); }
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Password Change</h3></div>
                    <div class="card-body">
                        <div class="small mb-3 text-muted">Set your Old and New Password.</div>
                        <form id="formchange" class="need-validations" novalidate>

                         
                                
                                    <input class="form-control" id="inputEmail" Value="@ViewBag.email" name="email"type="email" placeholder="name@example.com" required hidden>
                                    
                            

                            <div class="form-row">
                                <label for="inputOldPass">Old Password</label>
                                <div class="input-group">
                                    <input class="form-control" id="inputOldPass" name="oldpassword" type="password" placeholder="Your Password" required>
                                    <div class="invalid-feedback">
                                        <span id="msgOld"></span>
                                    </div>
                                </div>
                            </div> 
                            
                            <div class="form-row">
                                <label for="inputNewPass">New Password</label>
                                <div class="input-group">
                                    <input class="form-control" id="inputNewPass" name="newpassword" type="password" placeholder="Your Password" required>
                                    <div class="invalid-feedback">
                                        <span id="msgNew"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <label for="inputConfirmPass">Confirm Password</label>
                                <input class="form-control" id="inputConfirmPass" name="confirmpassword"type="password" placeholder="Your Password" required>
                                <div class="invalid-feedback">
                                    <span id="msgConfirm"></span>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">

                                <a class="btn btn-primary btn-user btn-block" id="btnChange">Change Password</a>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>


    @section Scripts {
        <script src="~/js/changeJs.js"></script>
    }


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>


</body>

