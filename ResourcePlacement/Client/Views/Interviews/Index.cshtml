@{ Layout = "_LayoutAdmin"; }
<div class="col-md-6">
  
    <h1 class="mt-4">Add Interview Data</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Add employee's interview data</li>
    </ol>
</div>
<div class="box">
    <div class="box-body">
        <div class="box-row">
            <h3 class="mt-4">Employee</h3>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Select employee</li>
            </ol>

            <form id="formjobinterview " class="need-validations">
                <div class="form-row">
                    <label for="validationCustom03">ID</label>
                    <div class="col input-group">
                        <input type="text" class="form-control" id="validationCustom03" placeholder="ID" required readonly>
                        <div class="input-group-append">
                            <a class="btn btn-primary" data-toggle="modal" data-target="#SelectJobEmployee">Search</a>
                        </div>
                    </div>
                    <div class="invalid-feedback">
                        <span id="msgID"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col">
                        <label for="inputName">Name</label>
                        <input type="text" class="form-control" id="inputName" placeholder="Employeee's Name" required readonly>
                        <div class="invalid-feedback">
                            <span id="msgFN"></span>
                        </div>
                    </div>
                </div>
            </form>

        </div>
        <div class="box-row">
            <h3 class="mt-4">Job</h3>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Select job for the employee</li>
            </ol>
            <form id="formjob" class="need-validations">

                <div class="form-row">
                    <label for="jobID">ID</label>
                    <div class="col input-group">
                        <input type="text" class="form-control" id="JobID" placeholder="ID Job" required readonly />
                    </div>
                    <div class="invalid-feedback">
                        <span id="msgID"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" placeholder="Job Title" required readonly>
                        <div class="invalid-feedback">
                            <span id="msgT"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="company">Company</label>
                    <input type="text" class="form-control" id="company" placeholder="Company" required readonly>
                    <div class="invalid-feedback">
                        <span id="msgC"></span>
                    </div>
                </div>
                <div class="form-group" hidden>
                <label for="description">Description</label>
                <textarea class="form-control" id="description" rows="3" required></textarea>
                <div class="invalid-feedback">
                    <span id="msgDescription"></span>
                </div>
        </div>


        </form>

    </div>
        <div class="box-row">
            <h3 class="mt-4">Interview</h3>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Interview Detail</li>
            </ol>
            <form id="forminterview" class="need-validations">

                <div class="form-group">
                    <label for="InterviewDate">Interview Date</label>
                    <div>
                        <input type="date" id="InterviewDate" class="form-control" name="trip-start" min="2021-01-01" max="2041-12-31" required>
                        <div class="invalid-feedback">
                            <span id="msgInterviewDate"></span>
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <label for="InterviewTime">Choose a time for Interview</label>
                    <div class="col-md-2 mb-3">
                        <input type="time" id="InterviewTime" class="form-control" name="appt" required>
                        <div class="invalid-feedback">
                            <span id="msgInterviewTime"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">

                    <label for="Interviewer">User</label>
                    <input type="text" id="Interviewer" class="form-control" placeholder="User" required>
                    <div class="invalid-feedback">
                        <span id="msgUser"></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="SelectJobEmployee" role="dialog" aria-labelledby="SelectJobEmployeelabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">

        <!-- Modal content-->
        <div class="modal-content">
            <<div class="modal-header">
                <h5 class="modal-title" id="SelectJobEmployee">Select Job Employee</h5>
                <button type="button" class="close btn btn-danger" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" table-responsive>
                <table class="table" id="datajobemployee">

                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">No.</th>
                            <th scope="col">ID Job</th>
                            <th scope="col">Title</th>
                            <th scope="col">Company</th>
                            <th scope="col">ID Employee</th>
                            <th scope="col">Employee Name</th>>
                            <th scope="col">Action</th>>
                        </tr>
                    </thead>

                    <tbody id="jobemployee">
                    </tbody>
                </table>


                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>


<div class="col-md-6">
    <div class="col-md-5"></div>
    <div class="col-md-1 d-flex align-items-center">
        <div class="d-flex align-items-center">
            <button type="button" class="btn btn-success btn-lg" id="interview">Submit</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/interviewJs.js"></script>
}