<body class="bg-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">


                    <h3 class="text-center font-weight-light my-4">
                        Login
                        <img src="~/img/mii.png" class="rounded mx-auto d-block">
                    </h3>

                    <div class="card-body">
                        <form class="user" method="post" asp-controller="Logins" asp-action="Auth">
                            <div class="form-row">
                                <label for="inputEmail">Email address</label>
                                <input type="email" name="email" class="form-control" id="inputEmail" placeholder="name@example.com" />
                                <div class="invalid-feedback">
                                    Check Again!
                                </div>
                            </div>
                            <div class="form-row">
                                <label for="inputPassword">Password</label>
                                <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Password" />
                                <div class="invalid-feedback">
                                    Check Again!
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a class="middle" asp-controller="ForgotPasswords" asp-action="forgot-page">Forgot Password?</a>
                                <button class="btn btn-primary btn-user btn-block" type="submit" id="btnLogin">Login</button>
                            </div>
                        </form>
                    </div>
                    @*<div class="card-footer text-center py-3">
                            <div class="small"><a href="register.html">Need an account? Sign up!</a></div>
                        </div>*@
                </div>
            </div>
        </div>
    </div>

